#ifndef PITW_CONFIG_H
#define PITW_CONFIG_H

/**
 * @file
 * This header contains information about this particular build of pitw.
 * The contents of this header are programmatically generated during the build.
 */

/**
 * The full version string suitable for printing.
 */
#define PITW_VERSION_STRING "@PROJECT_VERSION@"

/**
 * The major version number.
 */
#define PITW_VERSION_MAJOR @PROJECT_VERSION_MAJOR@

/**
 * The minor version number.
 */
#define PITW_VERSION_MINOR @PROJECT_VERSION_MINOR@

/**
 * The patch version number.
 */
#define PITW_VERSION_PATCH @PROJECT_VERSION_PATCH@

/**
 * Is pitw built as a shared library?
 */
#cmakedefine PITW_SHARED

/**
 * @def PITW_API
 * An exported function that is part of pitw's external API.
 */
/**
 * @def PITW_PRIVATE
 * An internal function that should not be called outside of pitw.
 */
#ifdef PITW_SHARED
#  ifdef _WIN32
#    ifdef PITW_EXPORTS
#      define PITW_API __declspec(dllexport)
#      define PITW_PRIVATE
#    else
#      define PITW_API __declspec(dllimport)
#      define PITW_PRIVATE
#    endif
#  elif __GNUC__ >= 4
#    define PITW_API __attribute__((visibility("default")))
#    define PITW_PRIVATE __attribute__((visibility("hidden")))
#  endif
#else
#  define PITW_API
#  define PITW_PRIVATE
#endif

#endif /* PITW_CONFIG_H */
